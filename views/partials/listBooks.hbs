<table class="ui fixed striped table">
  <thead>
    <tr>
      <th class="two wide">Book</th>
      <th class="two wide">Cover</th>
      <th class="two wide" colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each booklist.books}}
    <form class = "ui stacked segment form" action="/details/{{../booklist.id}}/updatebook/{{id}}" method="POST">
    <tr class="fields">
      <td class="field">
        <span class="ui input">
         <input type="text" name="title" autofocus required title = "Please include a valid Title" placeholder="Title" value="{{title}}">
        </span>
      </td>
      <td class="center aligned">
        <img class="ui small image" src="{{picture}}">
      </td>
      <td class="center aligned">
        <button class="ui submit icon button"><i class="ui pencil alternate icon"></i></button>
      </td>
      <td class="center aligned">
        <a href="/details/{{../booklist.id}}/deletebook/{{id}}" class="ui icon button delbook">
          <i class="ui trash icon"></i>
        </a>
      </td>
    </tr>
    </form> 
    {{/each}}
  </tbody>
</table>

<p>
  <span id="rating"></span>
</p>

<button class="ui blue button" id="rateit">
  Rate it! <i class="star icon"></i>
</button>